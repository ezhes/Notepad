{
    "name": "One",
    "style": "Light",
    "author": {
        "name": "Rudd Fawcett",
        "email": "rudd.fawcett@gmail.com"
    },
    "version": "1.0",
    "variables": {
        "boldFont": "not implemented yet"
    },
    "editor": {
        "backgroundColor": "#ffffff",
        "tintColor": "#A1A8B5"
    },
    "styles": {
        "h1": {
            "color": "#E55D51",
            "preferredFont" : "title1"
        },
        "h2": {
            "color": "#E55D51",
            "preferredFont" : "title2"
        },
        "h3": {
            "preferredFont" : "title3",
            "color": "#E55D51",
        },
        "body": {
            "preferredFont" : "body",
            "color": "#000000"
        },
        "bold": {
            "color": "#A97A00",
            "preferredFont" : "body",
            "traits":"bold"
        },
        "italic": {
            "color": "#B742B3",
            "preferredFont" : "body",
            "traits":"italic"
        },
        "code": {
            "color": "#FF00FF",
            "font" : "Courier"
        },
        "url": {
            "color": "#095fff",
            "font" : "Courier"
        },
        "quotes": {
            "color": "#777777",
            "preferredFont" : "body",
            "regex":"^(\\>(.*))$"
        }
    }
}
